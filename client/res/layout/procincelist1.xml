<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:paddingBottom="4dip"
        android:paddingLeft="12dip"
        android:paddingRight="12dip">

    <TextView
            android:text="TextView01"
            android:layout_height="wrap_content"
            android:paddingRight="20dip"
            android:textSize="23dip"
            android:layout_width="200dp"
            android:id="@+id/ItemTitle"
            android:paddingTop="10dip" android:layout_alignParentLeft="true"
            android:textColor="#ffffff" android:layout_marginLeft="130dp" android:layout_alignParentRight="true"
            />

    <ImageView
            android:paddingTop="2dip"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ItemImage"
            android:layout_marginLeft="8dp" android:layout_alignParentTop="false" android:layout_marginTop="4dp"/>

</RelativeLayout>
