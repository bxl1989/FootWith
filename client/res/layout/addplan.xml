<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ScrollView" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:scrollbars="vertical">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@drawable/background_tab">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="目的地"
                android:id="@+id/bt_favSite" android:paddingLeft="20dp"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_favSite" android:layout_gravity="center" android:paddingLeft="40dp"
                android:text="你好"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间"
            android:id="@+id/tv_starttime" android:layout_gravity="left|center_vertical" style="@style/logoText"
            android:layout_marginTop="10dp"/>
    <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datePicker_start" android:layout_gravity="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间"
            android:id="@+id/tv_endtime" android:layout_gravity="left|center_vertical" style="@style/logoText"
            android:paddingTop="10dp"/>
    <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datePicker_end" android:layout_gravity="center|top"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <TextView style="@style/logoText" android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="参与人数" android:id="@+id/textView" android:layout_gravity="center"
                />
        <EditText android:layout_width="100dp" android:layout_height="wrap_content" android:id="@+id/editText_num"
                  android:layout_gravity="center"
                  android:gravity="center_horizontal"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="描述"
            android:id="@+id/tv_describe" android:layout_gravity="left|center_vertical" style="@style/logoText"
            android:layout_marginTop="10dp"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:text="描述"
            android:id="@+id/editText_description" android:layout_gravity="left|center_vertical"/>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_gravity="left|center_vertical">
        <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="提交"
                android:id="@+id/bt_addPlan"
                android:layout_alignParentLeft="false"
                android:layout_centerInParent="true" android:clickable="false"
                android:layout_alignWithParentIfMissing="false"/>
    </RelativeLayout>

</LinearLayout>
    </ScrollView>